      <object
        size="50%+2 -2 100%+1 29"
        type="image"
        sprite="stretched:session/icons/stances/defensive.png"
        ghost="true"
      />
    </object>

    <object
      type="text"
      style="overlayHeader"
      text_align="center"
      size="825 0 915 100%"
