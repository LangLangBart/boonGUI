    <object
      type="text"
      style="overlayHeader"
      size="679 0 712 100%"
      tooltip="Infantry">
      Inf
    </object>

    <object
      type="text"
      style="overlayHeader"
      size="716 0 749 100%"
      tooltip="Cavalry">
      Cav
    </object>

    <object
      type="text"
      style="overlayHeader"
      size="755 0 819 100%"
      text_align="center"
      tooltip="Economy | Military Upgrades">
      <object
        size="4 -2 50%+1 29"
