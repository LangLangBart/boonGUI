          <object type="text" size="58% 0 98% 95%" ghost="true">
            <object
              name="StatsTopPanelRow[n]_metalGatherers"
              type="text"
              style="overlayMedium"
            />
            <object
              name="StatsTopPanelRow[n]_metalRates"
              type="text"
